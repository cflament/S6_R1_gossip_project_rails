<% if @user.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <p>La session n'a pas pu être créée pour la (ou les) raison(s) suivante(s) :</p>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

<div class="container">
    <div class=text-center>
    <h1>Créer un compte :</h1>

    <%= form_tag users_path, method: "post" do %>
    <div class="form-group">
        <%= label_tag 'email' %><br/>
        <%= text_field_tag 'email' %>
        <br /> <br />
    </div>
    <div class="form-group">
        <%= label_tag 'mot de passe' %><br/>
        <%= password_field_tag 'password' %>
        <br /> <br />
    </div>
        <%= submit_tag "Valider", class: "btn btn-info" %>
    <% end %>
    </div>
</div>
