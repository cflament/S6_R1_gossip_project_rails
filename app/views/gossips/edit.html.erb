<html>
  <body>
    <% if @gossip.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <p>Nous n'avons pas réussi à modifier le potin pour la (ou les) raison(s) suivante(s) :</p>
      <ul>
        <% @gossip.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
    
    <div class="container">
        <h1>Modifie ton potin :</h1>

        <%= form_tag url_for(action: 'update'), method: "PATCH" do %>
        <div class="form-group">
          <%= text_field_tag 'title', @gossip.title, class: 'form-control' %>
          <br />
        </div>
        <div class="form-group">
          <%= text_area_tag 'content', @gossip.content, class: 'form-control' %>
          <br />
        </div>
          <%= submit_tag "Valider", class: "btn btn-info" %>
        <% end %>
    </div>

  </body>
</html>