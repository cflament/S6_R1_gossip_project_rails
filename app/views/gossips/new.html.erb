<html>
  <body>
    <% if @gossip.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <p>Nous n'avons pas réussi à créer le potin pour la (ou les) raison(s) suivante(s) :</p>
      <ul>
        <% @gossip.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
    
    <div class="container">
      <div class=text-center>
        <h1>Balance un nouveau doss !</h1>

        <%= form_tag gossips_path, method: "post" do %>
        <div class="form-group">
          <%= label_tag 'Titre' %><br/>
          <%= text_field_tag 'gossip_title' %>
          <br /> <br />
        </div>
        <div class="form-group">
          <%= label_tag 'Potin' %><br/>
          <%= text_area_tag 'gossip_text' %>
          <br /> <br />
        </div>
          <%= submit_tag "Valider", class: "btn btn-info" %>
        <% end %>
      </div>
    </div>

  </body>
</html>
