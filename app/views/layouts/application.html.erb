<!DOCTYPE html>
<html>
  <head>
    <title>GossipProjectNew</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  </head>

<body>

  <% if flash[:success] != nil %>
    <div class="alert alert-success" role="alert"><%= flash[:success] %></div>
  <% end %>
  <% if flash[:logout] != nil %>
    <div class="alert alert-warning" role="alert"><%= flash[:logout] %></div>
  <% end %>
  <% if flash[:danger] != nil %>
    <div class="alert alert-danger" role="alert"><%= flash[:danger] %></div>
  <% end %>

  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="navbar-brand"> <%= link_to "TheGossipProject", root_path, class: "navbar-brand" %></div>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item active">
          <%= link_to "Nouveau", new_gossip_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Team", team_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Contact", contact_path, class: "nav-link" %>
        </li>
      </ul>
    </div>
    
    <% if session[:user_id] == nil %>
      <%= link_to "Se connecter", new_session_path, class: "nav-item btn btn-outline-dark" %>
      <%= link_to "Créer un compte", new_user_path, class: "nav-item btn btn-info"%>
    <% else %>
      <%= link_to current_user.email, '#', class: "nav-link text-secondary" %>
      <%= link_to "Se déconnecter", session_path(session.id), method: :delete, class: "nav-item btn btn-outline-dark"%>
    <% end %>

  </nav>

  <%= yield %>
  </body>
</html>
